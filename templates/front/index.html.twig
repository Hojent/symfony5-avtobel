{% extends 'base.html.twig' %}

{% block title %}Автомобили в Беларуси. Законодательство, кузовные размеры, ремонт.{% endblock %}

{% block body %}
    <section class="container">
        <div class="jumbotron">
            <h2>Сам себе автомеханик</h2>
            <hr class="my-3">
            <div class="row">
                <div class="col-lg-6 mx-auto">
                    <div class="card shadow mb-4">
                        <div class="card-body p-5">
                            <!-- List with icons -->
                            <h4 class="mb-4">Автомастер</h4>
                            <ul class="list-unstyled list pl-5">
                                <li class="mb-3 d-flex align-items-center"><i class="fa fa-truck mr-3 text-primary"></i>Болезни автомобилей</li>
                                <li class="mb-3 d-flex align-items-center"><i class="fa fa-gears mr-3 text-primary"></i>Ремонт своими руками</li>
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="col-lg-6 mx-auto">
                    <div class="card shadow mb-4">
                        <div class="card-body p-5">
                            <!-- List with icons -->
                            <h4 class="mb-4">Техническое обслуживание</h4>
                            <ul class="list-unstyled list pl-5">
                                <li class="mb-3 d-flex align-items-center"><i class="fa fa-gear mr-3 text-primary"></i>Шины и диски</li>
                                <li class="mb-3 d-flex align-items-center"><i class="fa fa-flask mr-3 text-primary"></i>Моторное масло.</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-3">
            <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card shadow mb-4">
                    <div class="card-body p-5">
                        <!-- List with icons -->
                        <h4 class="mb-4">Кузов</h4>
                        <ul class="list-unstyled list pl-5">
                            <li class="mb-3 d-flex align-items-center"><i class="fa fa-steam mr-3 text-primary"></i>Ремонт кузова</li>
                            <li class="mb-3 d-flex align-items-center"><i class="fa fa-diamond mr-3 text-primary"></i>Кузовные размеры</li>
                        </ul>
                    </div>
                </div>
            </div>
                <div class="col-lg-6 mx-auto">
                    <div class="card shadow mb-4">
                        <div class="card-body pt-5 pl-5 pr-5" style="padding-bottom: 40px">
                            <!-- List with icons -->
                            <h4 class="mb-4">Диагонали кузова</h4>
                           <img class="pl-5" src="{{ asset('assets/images/front/backmenu.jpg')}}"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Image element - set the background image for the header in the line below-->{#
    <div class="py-5 bg-image-full" >
        <!-- Put anything you want here! The spacer below with inline CSS is just for demo purposes!-->
        <div style="height: 10rem"></div>
    </div>#}
    <!-- Content section-->
    <section class="container">
            <div class="row justify-content-center">
                <h2>Советы автолюбителям</h2>
                   <div class="row">
                       {% for fav in favs %}
                        <div class="col-4">
                            <p class="lead"><a href="{{ path('post_show',
                                    { 'alias': fav.alias }) }}">{{ fav.title }}</a></p>
                            <p class="mb-0">{{ fav.introtext|raw }}</p>
                            {% if(fav.images) %}
                            <img src="{{  fav.images }}" class="mw-100" />
                            {% endif %}
                        </div>
                        {% endfor %}
                   </div>
            </div>


    </section>
{% endblock %}
