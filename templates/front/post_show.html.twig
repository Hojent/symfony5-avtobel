{% extends 'base.html.twig' %}

{% block title %}Автомобили в Беларуси. Законодательство, кузовные размеры, ремонт.{% endblock %}

{% block body %}
    <!-- Content section-->
    <section class="container">

        <h5 class="text text-success"><a href="{{ path('categories_list', {'category':post.category.parent.id}) }}">{{ post.category.parent }}</a> / <a href="{{ path('post_list', {'category':post.category.id}) }}">{{ post.category }}</a></h5>
        <h1>{{ post.title }}</h1>

        {% if(post.images) %}
       <div class="img-fluid float-left pr-5">
           <img src="{{ asset(post.images) }}" />
       </div>
        {% endif %}
        <div>
            {{ post.fullText|raw }}
        </div>


    </section>
{% endblock %}
