{% extends 'admin/main.html.twig' %}
{% block styles %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/extra-libs/multicheck/multicheck.css') }}">
    <link href="{{ asset('assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css')}}" rel="stylesheet">
{%  endblock %}
{% block main %}
     <div class="row">
         <div class="col-12">
             <div class="card">
                 <div class="card-body">
                     <h5 class="card-title">Категории <span class="float-right">
                             <a class="btn btn-success" href="{{ path('admin_category_new') }}">Добавить</a></span></h5>

                     <div class="table-responsive">
                         <table id="zero_config" class="table table-striped table-bordered">
                             <thead>
                             <tr>
                                 <th>ID</th>
                                 <th>Title</th>
                                 <th>Parent</th>
                                 <th>Published</th>
                                 <th>Created</th>
                                 <th>Actions</th>
                             </tr>
                             </thead>
                             <tbody>
                             {% for category in categories %}
                             <tr>
                                 <td>{{ category.id}}</td>
                                 <td>
                                    <a href="{{ path('admin_category_edit', { 'id': category.id }) }}">{{ category.title}}</a>
                                 </td>

                                 <td>{{ category.parentId}}</td>
                                 <td>{{ category.published}}</td>
                                 <td>{{ category.createdTime|date('d-m-Y')}}</td>
                                 <td>
                                     <button type="button" class="btn btn-danger btn-xs w-md" data-toggle="modal" data-target="#removeModal{{ category.id }}">Del</button>
                                     <!-- Modal -->
                                     <div class="modal fade" id="removeModal{{ category.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                         <div class="modal-dialog">
                                             <div class="modal-content">
                                                 <div class="modal-body">
                                                     Удалить?
                                                 </div>
                                                 <div class="modal-footer">
                                                     <form action="{{ path('admin_category_delete',
                                                         {'id' :category.id}) }}" method="POST">
                                                         <input type="hidden" name="token" value="{{ csrf_token('delete-category') }}"/>                                                     <button type="submit" class="btn btn-danger">Remove</button>
                                                     <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                     </form>
                                                 </div>
                                             </div><!-- /.modal-content -->
                                         </div><!-- /.modal-dialog -->
                                     </div><!-- /.modal -->
                                 </td>
                             </tr>
                             {% endfor %}
                             </tbody>
                             <tfoot>
                             <tr>
                                 <th>ID</th>
                                 <th>Title</th>
                                 <th>Parent</th>
                                 <th>Published</th>
                                 <th>Created_time</th>
                             </tr>
                             </tfoot>
                         </table>
                     </div>

                 </div>
             </div>
         </div>
    </div>
{% endblock %}
{% block scripts %}
<!--This page JavaScript -->
    <script src="{{ asset('assets/extra-libs/multicheck/datatable-checkbox-init.js')}}"></script>
    <script src="{{ asset('assets/extra-libs/multicheck/jquery.multicheck.js')}}"></script>
    <script src="{{ asset('assets/extra-libs/DataTables/datatables.min.js')}}"></script>
    <script>
        /****************************************
         *       Basic Table                   *
         ****************************************/
        $('#zero_config').DataTable();
    </script>

{% endblock %}




