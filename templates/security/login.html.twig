{% extends 'sec.html.twig' %}
{% block body %}
    <section class="container py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                        <div class="card-body">
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <form action="{{ path('app_login') }}" method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="form-floating mb-3">
                                    <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}"/>
                                    <label for="inputEmail">Email</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control"  id="password" name="_password" type="password" placeholder="Password" />
                                    <label for="inputPassword">Password</label>
                                </div>

                                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <button type="submit" class="btn btn-success">Вход</button> <a href="{{ path('app_register') }}" class="btn btn-default">Регистрация</a>
                                </div>
                            </form>
                            <p><a href="{{ path('app_forgot_password_request') }}">Не помню пароль :(</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </section>

{% endblock %}
