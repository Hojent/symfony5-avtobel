{% extends 'sec.html.twig' %}
{% block title %}Кузовные размеры - регистрация пользователя{% endblock %}

{% block body %}
    <section class="container py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Изменение пароля</h3></div>
                        <div class="card-body">
    <h4>Введите новый пароль</h4>

    {{ form_start(resetForm, {'attr': {'class':'form'}})  }}
        {{ form_row(resetForm.plainPassword) }}
        <button class="btn btn-primary mt-2">Отправить</button>
    {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
