{% extends 'sec.html.twig' %}
{% block title %}Кузовные размеры - регистрация пользователя{% endblock %}

{% block body %}
    <section class="container py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Регистрация</h3></div>
                        <div class="card-body">
                            {% for flash_error in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger" role="alert">
                                    {{ flash_error }}
                                </div>
                            {% endfor %}
                            {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.email, {'attr': {'class':'form-control'}}) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Password',
                                'attr': {'class':'form-control'}} ) }}

                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <button type="submit" class="btn btn-info">Register</button>
                                <a href="{{ path('app_login') }}" class="btn btn-default">Login</a>
                            </div>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

